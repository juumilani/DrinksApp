<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".scenarios_main.CategoriasActivity">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/voltar"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferencia"
            android:layout_gravity="center"
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingrediente"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

    <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button

            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="@string/gin"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:text="@string/vodka"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tipo_drink"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

    <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button

                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:text="@string/coquetel"
                android:textSize="18sp"
                android:layout_marginLeft="30dp"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:text="@string/normal"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"/>

    </LinearLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teor"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

    <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button

                android:layout_height="wrap_content"
                android:layout_width="170dp"
                android:text="@string/alcoolico"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="170dp"
                android:text="@string/nao_alcoolico"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"/>

    </LinearLayout>



</LinearLayout>